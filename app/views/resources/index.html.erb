<p id="notice"><%= notice %></p>

<h1>Resources</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Name</th>
      <th>Intro</th>
      <th>Introformat</th>
      <th>Tobemigrated</th>
      <th>Legacyfiles</th>
      <th>Legacyfileslast</th>
      <th>Display</th>
      <th>Displayoptions</th>
      <th>Filterfiles</th>
      <th>Revision</th>
      <th>Timemodified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.course %></td>
        <td><%= resource.name %></td>
        <td><%= resource.intro %></td>
        <td><%= resource.introformat %></td>
        <td><%= resource.tobemigrated %></td>
        <td><%= resource.legacyfiles %></td>
        <td><%= resource.legacyfileslast %></td>
        <td><%= resource.display %></td>
        <td><%= resource.displayoptions %></td>
        <td><%= resource.filterfiles %></td>
        <td><%= resource.revision %></td>
        <td><%= resource.timemodified %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

